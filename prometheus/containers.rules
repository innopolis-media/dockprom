ALERT docker_container_is_down_on_production
 
  IF (time() - container_last_seen{instance="10.8.0.18:8080",job="cadvisor"}) > 60
  FOR 5m
  LABELS { severity = "critical" }
  ANNOTATIONS {
    summary= "{{ $labels.name }} ({{ $labels.instance }}) down",
    description= "{{ $labels.name }} on prod-docker-0 is down for more than 5m"
  }
  
ALERT docker_container_is_down_on_stage
 
  IF (time() - container_last_seen{instance="10.8.0.14:8080",job="cadvisor"}) > 60
  FOR 5m
  LABELS { severity = "critical" }
  ANNOTATIONS {
    summary= "{{ $labels.name }} ({{ $labels.instance }}) down",
    description= "{{ $labels.name }} on stage-docker-0 is down for more than 5m"
  }