ALERT hfm_site_stage_down
  IF absent(container_tasks_state{instance="10.8.0.14:8080", name="hfm-site",state="running"})
  FOR 10s
  LABELS { severity = "critical" }
  ANNOTATIONS {
    summary= "hfm-site (stage) down",
    description= "hfm-site on stage-1 is down for more than 10 seconds."
  }

ALERT hfm_site_prod_down
  IF absent(container_tasks_state{instance="10.8.0.18:8080", name="hfm-site",state="running"})
  FOR 10s
  LABELS { severity = "critical" }
  ANNOTATIONS {
    summary= "hfm-site (prod) down",
    description= "hfm-site on prod-1 is down for more than 10 seconds."
  }